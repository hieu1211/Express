extends ../layout/nav-bar
block content
	.container
		h1 Create User
		if errors
			each error in errors
				.alert.alert-danger=error

		form(action="https://my.vnexpress.net/authen/users/register", method="POST")
			.form-group
				label(for="name") User name
				input(type="text",class="form-control",id="name", name="email", value=value?value.name:"")
			.form-group
				label(for="password") Password
				input(type="password",class="form-control",id="password", name="myvne_password", value=value?value.password:"")
			button.btn.btn-primary Create