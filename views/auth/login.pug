extends ../layout/nav-bar
block content	
	.container
		h1 Login
		if errors
			each error in errors
				.alert.alert-danger=error

		form(action="/auth/login", method="POST")
			.form-group
				label(for="email") Email
				input(type="text",class="form-control",id="email", name="email", value=value?value.email:"")

			.form-group
				label(for="password") Password
				input(type="password",class="form-control",id="password", name="password", value=value?value.password:"")
						
			button.btn.btn-primary Login